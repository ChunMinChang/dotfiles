{
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(./mach help:*)",
      "Bash(searchfox-cli:*)",
      "Bash(./.claude/hooks/should-format-lint.sh:*)",
      "Bash(./mach vendor:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "moz"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-lint.sh",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-format.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
